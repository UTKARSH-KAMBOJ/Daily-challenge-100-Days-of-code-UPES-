/*Q60: Count positive, negative, and zero elements in an array.

/*
Sample Test Cases:
Input 1:
5
-1 0 1 2 -2
Output 1:
Positive=2, Negative=2, Zero=1

*/
#include<stdio.h>
int main(){
    int i, n;

    printf("Enter the limit of array elements: ");
    scanf("%d", &n);

    int arr[n];
    int positive=0;
    int negative=0;
    int zero=0;

    printf("Enter the elements: ");
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    for(i=0;i<n;i++){
        if(arr[i]>0)
        
        {
            positive++;
        }
    else if(arr[i]<0){
        negative++;
    }
    else if(arr[i]==0){
        zero++;
    }
    }
    printf("positive no:%d",positive);
    printf("negative no:%d",negative);
    printf("zero:%d",zero);
    return 0;
}
