/*Q74: Find the transpose of a matrix.

/*
Sample Test Cases:
Input 1:
2 3
1 2 3
4 5 6
Output 1:
1 4
2 5
3 6

*/
#include <stdio.h>

int main() {
    int n, m;
    
    printf("enter the limit of rows: ");
    scanf("%d", &n);
    
    printf("enter the limit of column: ");
    scanf("%d", &m);
    
    int arr[n][m];  // Original matrix
    int i, j;
    
    printf("enter the elements:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < m; j++) {
            printf("arr[%d][%d]: ", i, j);
            scanf("%d", &arr[i][j]);
        }
    }

    // Print transpose
    printf("Transpose of the matrix is:\n");
    for (j = 0; j < m; j++) {
        for (i = 0; i < n; i++) {
            printf("%d ", arr[i][j]);  // âœ… arr[i][j] instead of arr[j][i]
        }
        printf("\n");
    }

    return 0;
}
