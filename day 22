/*Q43: Write a program to check if a number is a strong number.*/

/*
Sample Test Cases:
Input 1:
145
Output 1:
Strong number

Input 2:
123
Output 2:
Not strong number

*/
#include<stdio.h>

int main(){
    int n;
    int i, r, sum = 0, c;

    printf("enter the value of n:");
    scanf("%d", &n);

    c = n;  
    while(n > 0){
        r = n % 10;    
        int fact=1;
        for(i = 1; i <= r; i++){
            fact *= i;
        }

        sum += fact;   
        n = n / 10;     
    }

    if(sum == c){
        printf("Strong number\n");
    } else {
        printf("Not strong number\n");
    }

    return 0;
}
  
