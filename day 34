/*Q67: Insert an element in an array at a given position.

/*
Sample Test Cases:
Input 1:
4
10 20 30 40
2 15
Output 1:
10 20 15 30 40

*/
#include<stdio.h>
int main(){
    int n,pos,arr[100],i,num;
    printf("enter the size of an array (max 100)\n");
    scanf("%d",&n);
    printf("enter the elemts:\n");
    for(i=0;i<=n;i++){
        scanf("%d",&arr[i]);
    }
    printf("enter the position to insert a new element\n");
    scanf("%d",&pos);
    printf("enter the number to be inserted \n");
    scanf("%d",&num);

    for(i=n;i>=pos;i--){
        arr[i]=arr[i-1];
    }
    arr[pos-1]=num;
    n++;
    printf("array after inserting new elements\n");
    for(i=0;i<n;i++){
        printf("%d",arr[i]);
    }
    return 0;
}
