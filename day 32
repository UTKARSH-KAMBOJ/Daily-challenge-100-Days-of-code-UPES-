/*Q63: Merge two arrays.

/*
Sample Test Cases:
Input 1:
3
1 2 3
2
4 5
Output 1:
1 2 3 4 5

*/
#include<stdio.h>

int main(){
    int n;
    int m;
    int i;
    int j;

    printf("enter the limit of arr1:");
    scanf("%d", &n);            // Added & before n
    int arr1[n];                // Changed arr to arr1

    printf("enter the limit of arr2:");
    scanf("%d", &m);            // Added & before m
    int arr2[m];                // Changed arr to arr2

    for(i=0; i<n; i++){
        printf("enter the element of arr1:");
        scanf("%d", &arr1[i]);
    }

    for(j=0; j<m; j++){
        printf("enter the element of arr2:");
        scanf("%d", &arr2[j]);
    }

    int merged[n + m];

    // Copy elements of arr1
    for (i = 0; i < n; i++) {
        merged[i] = arr1[i];
    }

    // Copy elements of arr2
    for (i = 0; i < m; i++) {
        merged[n + i] = arr2[i];
    }

    printf("Merged array:\n");
    for (i = 0; i < n + m; i++) {
        printf("%d ", merged[i]);
    }
    printf("\n");

    return 0;
}
