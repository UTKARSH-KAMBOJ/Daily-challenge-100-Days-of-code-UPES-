/*Q75: Add two matrices.

/*
Sample Test Cases:
Input 1:
2 2
1 2
3 4
2 2
5 6
7 8
Output 1:
6 8
10 12

*/
#include <stdio.h>

int main() {
    int n, m;
    int i, j;

    printf("enter the limit of row: ");
    scanf("%d", &n);

    printf("enter the limit of column: ");
    scanf("%d", &m);

    int arr[n][m];

    printf("enter the elements of matrix 1:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < m; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    int o, p;

    printf("enter the limit of row2: ");
    scanf("%d", &o);

    printf("enter the limit of column2: ");
    scanf("%d", &p);

    // Check if matrix sizes match
    if (n != o || m != p) {
        printf("Matrix addition not possible. Dimensions do not match.\n");
        return 1;
    }

    int arr2[o][p];
    printf("enter the elements of matrix 2:\n");
    for (i = 0; i < o; i++) {
        for (j = 0; j < p; j++) {
            scanf("%d", &arr2[i][j]);
        }
    }

    int arr3[n][m];  // To store the result

    // Add the two matrices
    for (i = 0; i < n; i++) {
        for (j = 0; j < m; j++) {
            arr3[i][j] = arr[i][j] + arr2[i][j];
        }
    }

    // Print the result
    printf("Resultant matrix after addition:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < m; j++) {
            printf("%d ", arr3[i][j]);
        }
        printf("\n");
    }

    return 0;
}
