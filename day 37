/*
Q73: Find the sum of each row of a matrix and store it in an array.

/*
Sample Test Cases:
Input 1:
2 3
1 2 3
4 5 6
Output 1:
6 15

*/

#include <stdio.h>

int main() {
    int i = 0, j = 0;
    int n = 2;
    int m = 3;

    printf("Enter the number of rows: ");
    scanf("%d", &n);
    printf("Enter the number of columns: ");
    scanf("%d", &m);

    int arr[n][m];
    int rowSum[n]; // Array to store sum of each row

    printf("Enter the elements:\n");
    for (i = 0; i < n; i++) {
        rowSum[i] = 0; // Initialize sum for each row
        for (j = 0; j < m; j++) {
            printf("Element [%d][%d]: ", i + 1, j + 1);
            scanf("%d", &arr[i][j]);
            rowSum[i] += arr[i][j]; // Add to row sum
        }
    }

    printf("Row sums:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", rowSum[i]);
    }

    return 0;
}


